        <div class="user-interaction">
            <hr style="width: 100px;">
            <a href="/logout" class="btn btn-outline-dark ">Logout</a>
    </div>
      </nav>
    </div>
<div class="container d-flex justify-content-right">
    <div class="row title">
        <div class="col">
        <h1 id="title-1">Accounts of <%= name %> </h1>
        <hr>
      </div>
    </div>
    <hr>
</div>

<div class="container d-flex justify-content-right">
    <div class="row" style="padding-top: 3%;">
        <div class="col-md-3 col-lg-4">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">Personal Account</h5>
              <h6 class="card-subtitle mb-2 text-muted">Available Funds</h6>
              <p class="card-text">$ <%= balance %></p>
              <hr>
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#transfer">
                Transfer
              </button>
              
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#deposit">
                Deposit
              </button>
              
            </div>
          </div>
        </div>

      </div>
      <div class="row" style="padding-top: 3%;">
      <div class="col-md-3 col-lg-4">
        <div class="card" style="width: 18rem;margin-left: 10vh;">
          <div class="card-body">
            <h5 class="card-title">Savings Account</h5>
            <h6 class="card-subtitle mb-2 text-muted">Available Funds</h6>
            <p class="card-text">$ <%= saving %></p>
            <hr>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#transfer">
              Transfer
            </button>
            
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#deposit">
              Deposit
            </button>
            
          </div>
        </div>
      </div>
    </div>
</div>

<div class="modal fade" id="transfer" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Transfer</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/transaction" method="POST">
          <div class="form-group">
            <label for="balance">Amount</label>
            <input type="text" class="form-control" placeholder="Amount" name="balance" id="balance" >
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Transfer</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="deposit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Deposit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="container d-flex justify-content-right">
    <div class="row title">
        <div class="col">
        <h1 id="title-1">Transactions</h1>
        <hr>
      </div>
    </div>
    <hr>
</div>

<div class="container d-flex justify-content-right">
    <div class="row" style="padding-top: 3%;">
        <div class="col" style="width: 100vh;">
            <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Time</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>@mdo</td>
                  </tr>
                  <tr>
                    <th scope="row">2</th>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td>@fat</td>
                  </tr>
                  <tr>
                    <th scope="row">3</th>
                    <td>Larry</td>
                    <td>the Bird</td>
                    <td>@twitter</td>
                  </tr>
                </tbody>
              </table>
        </div>
      </div>
</div>
    
</body>
